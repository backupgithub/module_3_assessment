<center>
  <h3>Please see stores within 25 miles from Zipcode 80202</h3>
</center>
<br>

<center>
  <table class='info'>
    <tr>
      <th>Long Name</th>
      <th>City</th>
      <th>Distance</th>
      <th>Phone</th>
      <th>Store Type</th>
    </tr>
    <% @stores.each do |store| %>
    <tr class='store-info'>
      <td><%= store.long_name %></td>
      <td><%= store.city %></td>
      <td><%= store.distance %></td>
      <td><%= store.phone %></td>
      <td><%= store.store_type %></td>
    </tr>
    <% end %>
  </table>
</center>

<br>
<center>
  <h4> Found a total of <%= @total_store_found %> store(s) in your area</h4>
</center>
